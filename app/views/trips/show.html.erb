<p id="notice"><%= notice %></p>

<p>
  <strong>Location:</strong>
  <%= @trip.location %>
</p>

<p>
  <strong>Trip start date:</strong>
  <%= @trip.trip_start_date %>
</p>

<p>
  <strong>Trip end date:</strong>
  <%= @trip.trip_end_date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>

<% @results.each do |venue| %>
  <%= venue["name"] %><%= venue["lat"] %><%= venue["long"] %><br />
<% end %>

<div id="googleMap" style="width:500px;height:380px;"></div>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>

<script src="http://maps.googleapis.com/maps/api/js?sensor=false">
</script>

<script>
  function initialize() {
    var mapProp = {
      center: new google.maps.LatLng(51.508742,-0.120850),
      zoom:11,
      mapTypeId:google.maps.MapTypeId.ROADMAP
      };
     map=new google.maps.Map(document.getElementById("googleMap")
      ,mapProp);

    <% @results.each do |loc| %>
      new google.maps.Marker({position: new google.maps.LatLng(<%= loc["lat"] %>,<%= loc["long"] %> ), map: map, title: "Hello"});
    <% end %>
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>
